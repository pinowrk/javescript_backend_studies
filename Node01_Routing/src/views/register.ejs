<!DOCTYPE html>
<html lang="ja">
<head>
  <%- include("./_share/metadata.ejs") %>
  <title>Register</title>
  <%- include("./_share/stylesheets.ejs") %>
</head>
<body>
  <div class="outerframe">
    <%- include("./_share/navbar.ejs") %>
    <main role="main" class="container">
      <div class="border-bottom mt-5 mb-5">
        <h1>Register</h1>
      </div>
      <div class="row justify-content-center">
        <form method="POST" action="#" class="col-sm-10 col-lg-8">
          <div class="form-group row">
            <label for="username" class="col-sm-4 col-form-label text-right">Name：</label>
            <div class="col-sm-6">
              <input type="text" id="username" name="username" class="form-control" />
            </div>
          </div>
          <div class="form-group row">
            <label for="email" class="col-sm-4 col-form-label text-right">Email Address：</label>
            <div class="col-sm-6">
              <input type="email" id="email" name="email" class="form-control" />
            </div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-sm-4 col-form-label text-right">Password：</label>
            <div class="col-sm-6">
              <input type="password" id="password" name="password" class="form-control" />
            </div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-sm-4 col-form-label text-right">Confirm Password：</label>
            <div class="col-sm-6">
              <input type="password" id="confirm_password" name="confirm_password" class="form-control" />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-4"></div>
            <div class="col-sm-6">
              <input type="submit" class="btn btn-primary" value="Register" />
            </div>
          </div>
        </form>
      </div>
    </main>
    <%- include("./_share/footer.ejs") %>
  </div>
  <%- include("./_share/javascripts.ejs") %>
</body>
</html>
